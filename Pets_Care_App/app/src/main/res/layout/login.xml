<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_main">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="354dp"
            android:layout_height="409dp"
            android:background="@drawable/input"
            android:backgroundTint="#B7FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/constraintLayout6">

        <Button
                android:id="@+id/btn_user"
                android:layout_width="198dp"
                android:layout_height="66dp"
                android:text="Usuario del Servicio"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/button_rounded"
                app:layout_constraintTop_toBottomOf="@+id/type_service"
                android:layout_marginTop="92dp"/>

        <Button
                android:id="@+id/btn_collaborator"
                android:layout_width="199dp"
                android:layout_height="67dp"
                android:layout_marginBottom="112dp"
                android:textColor="#FFFFFF"
                android:text="Prestador del servicio"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/button_rounded"
                app:layout_constraintHorizontal_bias="0.496"/>

        <TextView
                android:text="Ingreso del tipo de servicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/type_service"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="32dp"
                android:textColor="#000000"
                android:textSize="24sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>