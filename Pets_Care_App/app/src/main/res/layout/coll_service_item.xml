<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input"
        android:backgroundTint="#6200EE">

    <view
            android:layout_width="440dp"
            android:layout_height="412dp"
            class="androidx.appcompat.widget.ActionMenuView"
            android:id="@+id/view7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_rounded"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFFFFF"
            />

    <ImageView
            android:layout_width="70dp"
            android:layout_height="66dp"
            app:srcCompat="@drawable/user"
            android:background="@drawable/button_rounded_border"
            android:id="@+id/avatar_coll_service"
            app:layout_constraintTop_toTopOf="@+id/view7"
            app:layout_constraintEnd_toStartOf="@+id/coll_publi_name_service"
            app:layout_constraintStart_toStartOf="@+id/view7"
            app:layout_constraintBottom_toBottomOf="@+id/view7"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.02"
            android:layout_marginStart="16dp"/>

    <TextView
            android:text="TextView"
            android:layout_width="280dp"
            android:layout_height="68dp"
            android:id="@+id/coll_publi_name_service"
            app:layout_constraintTop_toTopOf="@+id/view7"
            app:layout_constraintBottom_toTopOf="@+id/image_coll_service_publi"
            app:layout_constraintEnd_toEndOf="@+id/view7"
            app:layout_constraintVertical_bias="0.466"
            app:layout_constraintStart_toStartOf="@+id/view7"
            app:layout_constraintHorizontal_bias="0.87"
            android:background="@drawable/button_rounded_border"
            android:gravity="center_vertical"
            android:layout_marginEnd="30dp"/>

    <ImageView
            android:layout_width="350dp"
            android:layout_height="198dp"
            app:srcCompat="@drawable/fondo"
            android:id="@+id/image_coll_service_publi"
            android:background="@drawable/button_rounded_border"
            app:layout_constraintStart_toStartOf="@+id/view7"
            app:layout_constraintEnd_toEndOf="@+id/view7"
            app:layout_constraintHorizontal_bias="0.478"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/avatar_coll_service"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

    <TextView
            android:text="TextView"
            android:layout_width="350dp"
            android:background="@drawable/button_rounded_border"
            android:layout_height="61dp"
            android:id="@+id/description_public_service"
            app:layout_constraintStart_toStartOf="@+id/view7"
            app:layout_constraintEnd_toEndOf="@+id/view7"
            app:layout_constraintTop_toBottomOf="@+id/image_coll_service_publi"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

    <Button
            android:text="Editar"
            android:layout_width="96dp"
            android:layout_height="40dp"
            android:id="@+id/btn_editar_publi_coll"
            app:layout_constraintTop_toBottomOf="@+id/description_public_service"
            app:layout_constraintEnd_toEndOf="@+id/view7"
            app:layout_constraintStart_toStartOf="@+id/view7"
            app:layout_constraintBottom_toBottomOf="@+id/view7"
            app:layout_constraintVertical_bias="0.18"
            android:background="@drawable/button_rounded"
            android:textColor="#FFFFFF"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>